<header class="[ intro ] [ pad-top-900 pad-bottom-max ]">
	<div class="[ inner-wrapper ] [ sf-flow ]">
		<h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
		{% if introSummary %}
			<img src="/images/avatar-no-bg.svg" class="avatar" alt="Front Row Greg avatar" loading="lazy" width="559" height="340">
			<div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ]">
				{{ introSummary | safe }}
			</div>
		{% endif %}
	</div>
</header>